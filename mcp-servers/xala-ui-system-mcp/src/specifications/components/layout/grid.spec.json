{
  "metadata": {
    "name": "Grid",
    "version": "1.0.0",
    "category": "layout",
    "description": "A responsive CSS Grid component for creating flexible grid layouts with Norwegian design standards",
    "classification": "NSM_OPEN",
    "performance": {
      "bundleSize": "<2KB",
      "renderTime": "<16ms"
    }
  },
  "props": {
    "columns": {
      "type": "number | ResponsiveColumns",
      "description": "Number of columns (1-12) or responsive object",
      "default": "1",
      "required": false,
      "examples": [
        "3",
        "{ sm: 1, md: 2, lg: 3, xl: 4 }"
      ],
      "validation": {
        "min": 1,
        "max": 12
      }
    },
    "gap": {
      "type": "'none' | 'sm' | 'md' | 'lg' | 'xl'",
      "description": "Gap between grid items (both row and column)",
      "default": "md",
      "required": false,
      "examples": [
        "'none'",
        "'sm'",
        "'md'",
        "'lg'",
        "'xl'"
      ],
      "mapping": {
        "none": "gap-0",
        "sm": "gap-2",
        "md": "gap-4",
        "lg": "gap-6",
        "xl": "gap-8"
      }
    },
    "rowGap": {
      "type": "'none' | 'sm' | 'md' | 'lg' | 'xl'",
      "description": "Vertical gap between grid rows",
      "default": null,
      "required": false,
      "examples": [
        "'sm'",
        "'lg'"
      ],
      "mapping": {
        "none": "gap-y-0",
        "sm": "gap-y-2",
        "md": "gap-y-4",
        "lg": "gap-y-6",
        "xl": "gap-y-8"
      }
    },
    "columnGap": {
      "type": "'none' | 'sm' | 'md' | 'lg' | 'xl'",
      "description": "Horizontal gap between grid columns",
      "default": null,
      "required": false,
      "examples": [
        "'sm'",
        "'lg'"
      ],
      "mapping": {
        "none": "gap-x-0",
        "sm": "gap-x-2",
        "md": "gap-x-4",
        "lg": "gap-x-6",
        "xl": "gap-x-8"
      }
    },
    "alignItems": {
      "type": "'start' | 'center' | 'end' | 'stretch'",
      "description": "Align grid items vertically within their grid areas",
      "default": "stretch",
      "required": false,
      "examples": [
        "'start'",
        "'center'",
        "'end'",
        "'stretch'"
      ],
      "mapping": {
        "start": "items-start",
        "center": "items-center",
        "end": "items-end",
        "stretch": "items-stretch"
      }
    },
    "justifyItems": {
      "type": "'start' | 'center' | 'end' | 'stretch'",
      "description": "Align grid items horizontally within their grid areas",
      "default": "stretch",
      "required": false,
      "examples": [
        "'start'",
        "'center'",
        "'end'",
        "'stretch'"
      ],
      "mapping": {
        "start": "justify-items-start",
        "center": "justify-items-center",
        "end": "justify-items-end",
        "stretch": "justify-items-stretch"
      }
    },
    "children": {
      "type": "React.ReactNode",
      "description": "Grid items to be rendered within the grid container",
      "required": true,
      "examples": [
        "<GridItem>Content 1</GridItem>",
        "<div>Item 1</div><div>Item 2</div>"
      ]
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes for custom styling",
      "default": "''",
      "required": false,
      "examples": [
        "'border border-gray-200'",
        "'bg-white shadow-md'"
      ]
    }
  },
  "types": {
    "ResponsiveColumns": {
      "sm?": "number",
      "md?": "number", 
      "lg?": "number",
      "xl?": "number"
    }
  },
  "implementation": {
    "technology": "CSS Grid",
    "framework": "Tailwind CSS",
    "responsive": true,
    "accessibility": {
      "wcagLevel": "AAA",
      "features": [
        "Semantic grid structure",
        "Proper focus management",
        "Screen reader compatibility"
      ]
    }
  },
  "examples": [
    {
      "name": "Basic Grid",
      "description": "Simple 3-column grid with medium gap",
      "code": "<Grid columns={3} gap=\"md\">\n  <div>Item 1</div>\n  <div>Item 2</div>\n  <div>Item 3</div>\n  <div>Item 4</div>\n  <div>Item 5</div>\n  <div>Item 6</div>\n</Grid>"
    },
    {
      "name": "Responsive Grid",
      "description": "Grid that adapts from 1 column on mobile to 4 on desktop",
      "code": "<Grid columns={{ sm: 1, md: 2, lg: 3, xl: 4 }} gap=\"lg\">\n  <Card>Card 1</Card>\n  <Card>Card 2</Card>\n  <Card>Card 3</Card>\n  <Card>Card 4</Card>\n</Grid>"
    },
    {
      "name": "Grid with Custom Gaps",
      "description": "Grid with different row and column gaps",
      "code": "<Grid columns={2} rowGap=\"lg\" columnGap=\"sm\">\n  <div className=\"p-4 bg-blue-50\">Item 1</div>\n  <div className=\"p-4 bg-blue-50\">Item 2</div>\n  <div className=\"p-4 bg-blue-50\">Item 3</div>\n  <div className=\"p-4 bg-blue-50\">Item 4</div>\n</Grid>"
    },
    {
      "name": "Aligned Grid Items",
      "description": "Grid with center-aligned items",
      "code": "<Grid columns={3} gap=\"md\" alignItems=\"center\" justifyItems=\"center\">\n  <div className=\"h-20 w-16 bg-green-200\">Short</div>\n  <div className=\"h-32 w-24 bg-blue-200\">Tall</div>\n  <div className=\"h-16 w-20 bg-red-200\">Medium</div>\n</Grid>"
    }
  ],
