      "variants": {
        "size": {
          "name": "Size",
          "description": "Controls input dimensions and touch targets",
          "default": true,
          "aiRecommended": true,
          "values": ["sm", "md", "lg"]
        },
        "variant": {
          "name": "Visual Style",
          "description": "Controls input appearance",
          "default": true,
          "aiRecommended": true,
          "values": ["outline", "filled", "underline"]
        },
        "state": {
          "name": "Validation State",
          "description": "Shows validation feedback",
          "default": false,
          "aiRecommended": true,
          "values": ["default", "success", "warning", "error"]
        }
      },
      "composition": {
        "children": {
          "allowed": [],
          "recommended": []
        },
        "parent": {
          "recommended": ["Form", "Card", "Container", "Modal", "FormGroup"]
        },
        "siblings": {
          "worksWellWith": ["Label", "HelperText", "Button", "Select", "Textarea"]
        }
      },
      "accessibility": {
        "role": "textbox",
        "ariaAttributes": ["aria-label", "aria-describedby", "aria-invalid", "aria-required"],
        "keyboardSupport": ["Tab", "Enter", "Escape"]
      },
      "examples": [
        {
          "name": "Email Input",
          "description": "Email input field with validation",
          "useCase": "form",  
          "aiOptimized": true,
          "code": {
            "react": "<Input type=\"email\" label=\"Email Address\" placeholder=\"Enter your email\" required />",
            "vue": "<Input type=\"email\" label=\"Email Address\" placeholder=\"Enter your email\" :required=\"true\" />",
            "html": "<div class=\"input-group\"><label for=\"email\">Email Address</label><input type=\"email\" id=\"email\" placeholder=\"Enter your email\" required /></div>"
          }
        }
      ]
