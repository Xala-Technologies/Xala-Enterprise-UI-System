{
  "$schema": "./schema/universal-token-schema.json",
  "id": "ai-component-specifications",
  "name": "AI-Friendly Component Specifications",
  "description": "Universal component specifications optimized for AI code generation tools",
  "version": "1.0.0",
  "category": "base",
  "mode": "light",
  "aiContext": {
    "designIntent": "professional",
    "targetPlatforms": ["web", "mobile", "desktop", "tablet"],
    "useCases": ["dashboard", "landing-page", "form", "e-commerce", "admin", "mobile-app"],
    "industryVertical": "technology"
  },
  "components": {
    "Button": {
      "name": "Button",
      "category": "form",
      "description": "Primary action component for user interactions. Always creates professional, accessible buttons with smart defaults.",
      "aiTags": ["action", "primary", "interactive", "cta", "submit", "click"],
      "props": {
        "variant": {
          "type": "string",
          "description": "Visual style variant. 'primary' for main actions, 'secondary' for supporting actions, 'outline' for subtle actions",
          "default": "primary",
          "aiRecommended": true,
          "values": ["primary", "secondary", "outline", "ghost", "destructive", "success", "warning", "link"]
        },
        "size": {
          "type": "string", 
          "description": "Size variant following professional standards. 'md' is optimal for most use cases",
          "default": "md",
          "aiRecommended": true,
          "values": ["sm", "md", "lg", "xl"]
        },
        "fullWidth": {
          "type": "boolean",
          "description": "Whether button should span full width of container. Useful for mobile forms and CTAs",
          "default": false,
          "aiRecommended": false
        },
        "loading": {
          "type": "boolean",
          "description": "Shows loading spinner and disables interaction. Use for async operations",
          "default": false,
          "aiRecommended": true
        },
        "disabled": {
          "type": "boolean",
          "description": "Disables button interaction and shows disabled styling",
          "default": false,
          "aiRecommended": false
        },
        "icon": {
          "type": "node",
          "description": "Optional icon to display with button text",
          "required": false,
          "aiRecommended": true
        },
        "iconPosition": {
          "type": "string",
          "description": "Position of icon relative to text",
          "default": "left",
          "values": ["left", "right"]
        },
        "children": {
          "type": "node",
          "description": "Button text content. Keep concise and action-oriented",
          "required": true,
          "aiRecommended": true
        },
        "onClick": {
          "type": "function",
          "description": "Click handler function",
          "required": false,
          "aiRecommended": true
        }
      },
      "variants": {
        "variant": {
          "name": "Visual Style",
          "description": "Controls the visual appearance and hierarchy",
          "default": true,
          "aiRecommended": true,
          "values": ["primary", "secondary", "outline", "ghost", "destructive", "success", "warning", "link"]
        },
        "size": {
          "name": "Size",
          "description": "Controls button dimensions following professional standards",
          "default": true,
          "aiRecommended": true,
          "values": ["sm", "md", "lg", "xl"]
        }
      },
      "composition": {
        "children": {
          "allowed": ["text", "Icon"],
          "recommended": ["text"]
        },
        "parent": {
          "recommended": ["Form", "Card", "Container", "ActionBar", "Header", "Modal"]
        },
        "siblings": {
          "worksWellWith": ["Input", "Select", "Textarea", "Checkbox", "Radio"]
        }
      },
      "accessibility": {
        "role": "button",
        "ariaAttributes": ["aria-pressed", "aria-expanded", "aria-label", "aria-disabled"],
        "keyboardSupport": ["Enter", "Space"]
      },
      "examples": [
        {
          "name": "Primary CTA",
          "description": "Main call-to-action button",
          "useCase": "landing-page",
          "aiOptimized": true,
          "code": {
            "react": "<Button variant=\"primary\" size=\"lg\">Get Started</Button>",
            "vue": "<Button variant=\"primary\" size=\"lg\">Get Started</Button>",
            "html": "<button class=\"btn-primary btn-lg\">Get Started</button>"
          }
        },
        {
          "name": "Form Submit",
          "description": "Form submission button with loading state",
          "useCase": "form",
          "aiOptimized": true,
          "code": {
            "react": "<Button type=\"submit\" loading={isSubmitting}>Submit</Button>",
            "vue": "<Button type=\"submit\" :loading=\"isSubmitting\">Submit</Button>",
            "html": "<button type=\"submit\" class=\"btn-primary\">Submit</button>"
          }
        }
      ]
    },
    "Card": {
      "name": "Card",
      "category": "layout",
      "description": "Flexible container component for grouping related content. Automatically creates professional layouts with proper spacing and elevation.",
      "aiTags": ["container", "content", "layout", "group", "panel", "surface"],
      "props": {
        "variant": {
          "type": "string",
          "description": "Visual style variant. 'elevated' adds subtle shadow, 'outlined' adds border",
          "default": "elevated",
          "aiRecommended": true,
          "values": ["default", "elevated", "outlined", "filled"]
        },
        "padding": {
          "type": "string",
          "description": "Internal spacing size. 'lg' provides comfortable spacing for most content",
          "default": "lg",
          "aiRecommended": true,
          "values": ["sm", "md", "lg", "xl"]
        },
        "interactive": {
          "type": "boolean",
          "description": "Whether card responds to hover/focus interactions",
          "default": false,
          "aiRecommended": false
        },
        "children": {
          "type": "node",
          "description": "Card content - can include headers, body content, actions",
          "required": true,
          "aiRecommended": true
        }
      },
      "variants": {
        "variant": {
          "name": "Visual Style",
          "description": "Controls card appearance and depth",
          "default": true,
          "aiRecommended": true,
          "values": ["default", "elevated", "outlined", "filled"]
        },
        "padding": {
          "name": "Padding",
          "description": "Controls internal spacing",
          "default": true,
          "aiRecommended": true,
          "values": ["sm", "md", "lg", "xl"]
        }
      },
      "composition": {
        "children": {
          "allowed": ["CardHeader", "CardContent", "CardFooter", "Button", "Text", "Image", "any"],
          "recommended": ["CardContent"]
        },
        "parent": {
          "recommended": ["Container", "Grid", "Stack", "Section"]
        },
        "siblings": {
          "worksWellWith": ["Card", "Button", "Badge"]
        }
      },
      "accessibility": {
        "role": "region",
        "ariaAttributes": ["aria-label", "aria-labelledby"],
        "keyboardSupport": []
      },
      "examples": [
        {
          "name": "Content Card",
          "description": "Basic content container with header and body",
          "useCase": "dashboard",
          "aiOptimized": true,
          "code": {
            "react": "<Card><CardHeader><Text variant=\"h3\">Title</Text></CardHeader><CardContent><Text>Content goes here</Text></CardContent></Card>",
            "vue": "<Card><CardHeader><Text variant=\"h3\">Title</Text></CardHeader><CardContent><Text>Content goes here</Text></CardContent></Card>",
            "html": "<div class=\"card\"><div class=\"card-header\"><h3>Title</h3></div><div class=\"card-content\">Content goes here</div></div>"
          }
        }
      ]
    },
    "Input": {
      "name": "Input",
