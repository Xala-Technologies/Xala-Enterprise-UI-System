{
  "id": "ecommerce-light",
  "name": "E-commerce Light",
  "description": "Modern light theme for e-commerce platforms with conversion-focused design",
  "version": "1.0.0",
  "category": "ECOMMERCE",
  "mode": "LIGHT",
  "accessibility": {
    "level": "WCAG_AA",
    "highContrast": false,
    "reducedMotion": false,
    "focusIndicators": true,
    "colorBlindFriendly": true,
    "screenReaderOptimized": false
  },
  "colors": {
    "primary": {
      "50": "#fdf2f8",
      "100": "#fce7f3",
      "200": "#fbcfe8",
      "300": "#f9a8d4",
      "400": "#f472b6",
      "500": "#ec4899",
      "600": "#db2777",
      "700": "#be185d",
      "800": "#9d174d",
      "900": "#831843",
      "950": "#500724"
    },
    "secondary": {
      "50": "#f0fdf4",
      "100": "#dcfce7",
      "200": "#bbf7d0",
      "300": "#86efac",
      "400": "#4ade80",
      "500": "#22c55e",
      "600": "#16a34a",
      "700": "#15803d",
      "800": "#166534",
      "900": "#14532d",
      "950": "#052e16"
    },
    "background": {
      "default": "#ffffff",
      "paper": "#fefefe",
      "elevated": "#f9fafb"
    },
    "text": {
      "primary": "#111827",
      "secondary": "#4b5563",
      "muted": "#9ca3af"
    },
    "border": {
      "default": "#e5e7eb",
      "muted": "#f3f4f6"
    },
    "status": {
      "success": "#22c55e",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    },
    "commerce": {
      "sale": "#dc2626",
      "discount": "#7c3aed",
      "featured": "#f59e0b",
      "cart": "#059669"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Poppins", "system-ui", "sans-serif"],
      "serif": ["Playfair Display", "serif"],
      "mono": ["Roboto Mono", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "6": "1.5rem",
    "8": "2rem",
    "12": "3rem",
    "16": "4rem",
    "24": "6rem"
  },
  "branding": {
    "logo": {
      "primary": "/assets/logos/ecommerce-logo-light.svg",
      "secondary": "/assets/logos/ecommerce-logo-alt-light.svg"
    },
    "brandColors": {
      "main": "#ec4899",
      "accent": "#22c55e"
    }
  },
  "compliance": {
    "standards": ["GDPR", "PCI_DSS", "CCPA"],
    "dataClassification": "SENSITIVE",
    "requiresApproval": false,
    "auditLogging": true
  },
  "performance": {
    "lazyLoading": true,
    "cacheStrategy": "aggressive",
    "bundleOptimization": true
  },
  "responsive": {
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    }
  }
}
