{
  "id": "education-light",
  "name": "Education Light",
  "description": "Modern light theme for educational platforms with learning-focused design",
  "version": "1.0.0",
  "category": "EDUCATION",
  "mode": "LIGHT",
  "accessibility": {
    "level": "WCAG_AAA",
    "highContrast": false,
    "reducedMotion": false,
    "focusIndicators": true,
    "colorBlindFriendly": true,
    "screenReaderOptimized": true
  },
  "colors": {
    "primary": {
      "50": "#eef2ff",
      "100": "#e0e7ff",
      "200": "#c7d2fe",
      "300": "#a5b4fc",
      "400": "#818cf8",
      "500": "#6366f1",
      "600": "#4f46e5",
      "700": "#4338ca",
      "800": "#3730a3",
      "900": "#312e81",
      "950": "#1e1b4b"
    },
    "secondary": {
      "50": "#f0f9ff",
      "100": "#e0f2fe",
      "200": "#bae6fd",
      "300": "#7dd3fc",
      "400": "#38bdf8",
      "500": "#0ea5e9",
      "600": "#0284c7",
      "700": "#0369a1",
      "800": "#075985",
      "900": "#0c4a6e",
      "950": "#082f49"
    },
    "background": {
      "default": "#ffffff",
      "paper": "#f8fafc",
      "elevated": "#f1f5f9"
    },
    "text": {
      "primary": "#0f172a",
      "secondary": "#475569",
      "muted": "#94a3b8"
    },
    "border": {
      "default": "#e2e8f0",
      "muted": "#f1f5f9"
    },
    "status": {
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    },
    "academic": {
      "grade_a": "#059669",
      "grade_b": "#3b82f6",
      "grade_c": "#f59e0b",
      "grade_f": "#ef4444"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Nunito", "system-ui", "sans-serif"],
      "serif": ["Crimson Text", "serif"],
      "mono": ["Fira Code", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "6": "1.5rem",
    "8": "2rem",
    "12": "3rem",
    "16": "4rem",
    "24": "6rem"
  },
  "branding": {
    "logo": {
      "primary": "/assets/logos/education-logo-light.svg",
      "secondary": "/assets/logos/education-logo-alt-light.svg"
    },
    "academicColors": {
      "main": "#6366f1",
      "accent": "#0ea5e9"
    }
  },
  "compliance": {
    "standards": ["GDPR", "COPPA"],
    "dataClassification": "SENSITIVE",
    "requiresApproval": false,
    "auditLogging": true
  },
  "performance": {
    "lazyLoading": true,
    "cacheStrategy": "moderate",
    "bundleOptimization": true
  },
  "responsive": {
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    }
  }
}
