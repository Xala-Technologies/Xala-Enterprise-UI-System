{
  "id": "productivity-light",
  "name": "Productivity Light",
  "description": "Clean light theme for productivity applications with focus-oriented design",
  "version": "1.0.0",
  "category": "PRODUCTIVITY",
  "mode": "LIGHT",
  "accessibility": {
    "level": "WCAG_AA",
    "highContrast": false,
    "reducedMotion": false,
    "focusIndicators": true,
    "colorBlindFriendly": true,
    "screenReaderOptimized": false
  },
  "colors": {
    "primary": {
      "50": "#f5f3ff",
      "100": "#ede9fe",
      "200": "#ddd6fe",
      "300": "#c4b5fd",
      "400": "#a78bfa",
      "500": "#8b5cf6",
      "600": "#7c3aed",
      "700": "#6d28d9",
      "800": "#5b21b6",
      "900": "#4c1d95",
      "950": "#2e1065"
    },
    "secondary": {
      "50": "#f9fafb",
      "100": "#f3f4f6",
      "200": "#e5e7eb",
      "300": "#d1d5db",
      "400": "#9ca3af",
      "500": "#6b7280",
      "600": "#4b5563",
      "700": "#374151",
      "800": "#1f2937",
      "900": "#111827",
      "950": "#030712"
    },
    "background": {
      "default": "#ffffff",
      "paper": "#f9fafb",
      "elevated": "#f3f4f6"
    },
    "text": {
      "primary": "#111827",
      "secondary": "#4b5563",
      "muted": "#9ca3af"
    },
    "border": {
      "default": "#e5e7eb",
      "muted": "#f3f4f6"
    },
    "status": {
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    },
    "productivity": {
      "focus": "#8b5cf6",
      "urgent": "#ef4444",
      "completed": "#10b981",
      "pending": "#f59e0b"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "serif": ["Charter", "serif"],
      "mono": ["JetBrains Mono", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "6": "1.5rem",
    "8": "2rem",
    "12": "3rem",
    "16": "4rem",
    "24": "6rem"
  },
  "branding": {
    "logo": {
      "primary": "/assets/logos/productivity-logo-light.svg",
      "secondary": "/assets/logos/productivity-logo-alt-light.svg"
    },
    "productivityColors": {
      "main": "#8b5cf6",
      "accent": "#6b7280"
    }
  },
  "compliance": {
    "standards": ["GDPR"],
    "dataClassification": "INTERNAL",
    "requiresApproval": false,
    "auditLogging": false
  },
  "performance": {
    "lazyLoading": true,
    "cacheStrategy": "moderate",
    "bundleOptimization": true
  },
  "responsive": {
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    }
  }
}
